{
  "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "commonjs",
      "target": "es5",
      "lib": ["es5", "es6", "dom"],
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "experimentalDecorators" : true,
      "emitDecoratorMetadata" : true,
      "rootDirs" : [
          "src/*",
          "dist/*"
      ],
      "paths": {
        "*":["./*", "*", "src/*","dist/*"]
      },
      "plugins": [
        { "transform": "ts-transformer-imports" }
      ]  
  },
  "include": [
      "./**/*",
      "src/**/*"
  ],
  "exclude": [
    "./node_modules/*"
  ]
}
